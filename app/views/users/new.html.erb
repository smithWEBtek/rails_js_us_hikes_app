<h1>Sign Up Below:</h1><br />
<div class="wrapper">
  <%= form_for @user do |f| %>
      <div class="field">
        <%= f.text_field :username, placeholder: "Username" %><br />
      </div>
      <div class="field">
        <%= f.text_field :email, placeholder: "Email" %><br />
      </div>
      <div class="field">
        <%= f.password_field :password, placeholder: "Password" %><br />
      </div>
      <div class="actions"><%= f.submit "Sign Up" %></div>
    <% end %><br />
  <h3> Already have an account? <%= link_to "Login", "/login"%> here or sign up with <%= link_to('Facebook', '/auth/facebook') %>.</h3>
</div>