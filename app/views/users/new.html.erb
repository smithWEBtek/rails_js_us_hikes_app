<h1>Sign Up Below:</h1>

<div class="wrapper">
  <%= form_for @user do |f| %>
    <%= f.text_field :username, placeholder: "Username" %>
    <%= f.text_field :email, placeholder: "Email" %>
    <%= f.password_field :password, placeholder: "Password" %>
    <%= f.submit "Submit" %>
  <% end %>
  <br />
  <h3> Already have an account? <%= link_to "Login", "/login"%> here or sign up with <%= link_to('Facebook', '/auth/facebook') %>.</h3>
</div>